{
  "name": "@gpn-prototypes/frontend-configs",
  "version": "0.1.2",
  "main": "index.js",
  "author": "gpn-prototypes",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "^12.16.2",
    "yarn": "^1.22.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:gpn-prototypes/frontend-configs.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./git/commitizen.js"
    }
  },
  "standard-version": {
    "skip": {
      "changelog": true
    }
  },
  "scripts": {
    "prettier": "prettier --config prettierrc.js --write ./**/*.{ts,tsx,css,js,jsx}",
    "lint:ts": "eslint -c eslintrc.js --ext=.ts,.tsx .",
    "lint:ts:fix": "eslint -c eslintrc.js --ext=.ts,.tsx . --fix",
    "lint:css": "stylelint --config stylelintrc.js ./packages ./.storybook",
    "lint:css:fix": "stylelint --config stylelintrc.js ./packages ./.storybook --fix",
    "lint:md": "remark . -o",
    "lint": "yarn run lint:ts && yarn run lint:css && yarn run lint:md",
    "lint:fix": "yarn run lint:ts:fix && yarn run lint:css:fix && yarn run lint:md",
    "changelog": "lerna-changelog",
    "release": "standard-version"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-typescript": "^7.9.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^25.4.0",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "style-loader": "^1.1.4",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "terser-webpack-plugin": "^3.0.1",
    "ts-loader": "^7.0.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.7.0"
  },
  "devDependencies": {
    "remark-cli": "^8.0.0",
    "cz-customizable": "^6.2.0",
    "lint-staged": "^10.2.11",
    "commitizen": "^4.1.2",
    "husky": "^4.2.5",
    "@gpn-prototypes/vega-changelog": "^3.2.4",
    "standard-version": "^8.0.0"
  }
}
